<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.study.sample.repository.SampleRepository">
	<select id="findAll" resultType="java.util.HashMap">
		SELECT * FROM sample
	</select>

	<select id="findUser" parameterType="string" resultType="kr.co.study.sample.dto.SampleDto">
		<![CDATA[
		select *
		from sample
		where userId=#{userId}
		and userPwd = #{userPwd}
		]]>
	</select>

	<select id="findUserIdAndUserPwd" parameterType="kr.co.study.sample.dto.SampleDto" resultType="kr.co.study.sample.dto.SampleDto">
		<![CDATA[
		select *
		from sample
		where userId=#{userId}
		and userPwd = #{userPwd}
		]]>
	</select>

	<insert id="registerMember"  useGeneratedKeys="true"
    keyProperty="id" parameterType="java.util.HashMap">
		insert into sample ( userId, userPwd, userName, email)
		values (
		#{userId}, #{userPwd}, #{userName}, #{email} )
	</insert>
	
	 <update id="updateMember" parameterType="kr.co.study.sample.dto.SampleDto">
        update sample set
        userPwd = #{userPwd},
        userName = #{userName}, email = #{email}
        where userId = #{userId}
    </update>
	


	<insert id="insert" parameterType="kr.co.study.sample.dto.SampleDto">
		insert into sample (name) values (#{name});
	</insert>
</mapper>


